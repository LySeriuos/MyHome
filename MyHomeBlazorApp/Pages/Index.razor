@page "/"

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Home - Organize Your World</title>
    <!-- Bootstrap CSS CDN -->
    
    <style>
        /* Custom font import for Bootstrap */
        body {
            font-family: 'Inter', sans-serif;
            background: linear-gradient(to bottom right, #e0f2fe, #f3e8ff); /* bg-gradient-to-br from-indigo-50 to-purple-100 */
        }
        /* Custom gradient for header */
        .header-gradient {
            background: linear-gradient(to right, #4c51bf, #6b46c1); /* from-indigo-700 to-purple-800 */
        }
        /* Custom hover effect for feature cards */
        .feature-card:hover {
            transform: scale(1.05);
            transition: transform 0.3s ease-in-out;
        }
        /* Button hover/focus effects */
        .btn-hover-scale:hover {
            transform: scale(1.05);
            transition: transform 0.3s ease-in-out;
        }

        .btn-hover-scale:focus {
            box-shadow: 0 0 0 0.25rem rgba(100, 77, 182, 0.5); /* Custom focus ring color */
        }

        .btn-white-ring:focus {
            box-shadow: 0 0 0 0.25rem rgba(255, 255, 255, 0.5); /* Custom white focus ring */
        }

        main {
            flex: 1;
            overflow-x: auto;
            height: auto;
        }

        .main {
            flex: 1;
            overflow-x: auto;
            height: 50vh;
        }

        
        .hero-background {
            background-image: url("/"); /* Placeholder image - Replace with your actual image */
            background-size: contain;
            background-position: center;
            background-repeat: no-repeat;
            position: relative; /* Needed for overlay positioning */
            color: #fff; /* Ensure text is white over dark background */
        }

            .hero-background::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background-color: rgba(0, 0, 0, 0.5); /* Dark overlay */
                z-index: 1; /* Place overlay above background image */
            }

        .hero-content {
            position: relative;
            z-index: 2; /* Place content above overlay */
        }
    </style>
</head>
<body class="min-vh-100 d-flex flex-column text-dark">

    <!-- Header Section -->
    <header class="header-gradient text-white shadow py-3 px-4 d-flex justify-content-between align-items-center rounded-bottom">
        <h1 class="h3 fw-bolder mb-0 tracking-tight">My Home</h1>
        <nav>
            <ul class="nav gap-3 gap-md-4">
                <li class="nav-item"><a href="#features" class="nav-link text-white fw-medium px-0">Features</a></li>
                <li class="nav-item"><a href="#about" class="nav-link text-white fw-medium px-0">About</a></li>
                <li class="nav-item"><a href="#" class="btn btn-light rounded-pill fw-semibold shadow-sm text-primary px-4 py-2">Login</a></li>
            </ul>
        </nav>
    </header>

    <!-- Hero Section -->
    <main class="flex-grow-1 d-flex flex-column align-items-center justify-content-center text-center py-5 py-md-5 px-3 hero-background">
        <section class="container col-lg-8 hero-content">
            <h2 class="display-4 display-md-1 fw-bolder text-primary lh-sm mb-4">
                Simplify Your Life, <span class="d-none d-sm-inline"><br></span> Organize Your Home.
            </h2>
            <p class="lead fs-5 fs-md-4 text-secondary mb-4 col-md-10 mx-auto">
                My Home is your ultimate digital assistant for managing everything in your household – effortlessly track device warranties, key information, and receipts.
            </p>
            <button class="btn btn-primary btn-lg rounded-pill fw-bold shadow-lg btn-hover-scale px-5 py-3">
                Get Started Now
            </button>
        </section>
    </main>

    <!-- Features Section -->
    <section id="features" class="py-5 bg-white shadow-sm rounded-top">
        <div class="container text-center px-4">
            <h3 class="h2 fw-bold text-dark mb-5">Key Features at a Glance</h3>
            <div class="row row-cols-1 row-cols-md-3 g-4">
                <!-- Feature 1: Gadget Management -->
                <div class="col">
                    <div class="card h-100 border-info bg-info bg-opacity-10 shadow-sm rounded-4 p-4 feature-card">
                        <div class="display-4 mb-3 text-info">&#128187;</div>
                        <h4 class="h5 fw-semibold mb-2 text-info">Gadget Organizer</h4>
                        <p class="card-text text-secondary">Keep track of all your devices, receipts, warranty details, IP, and MAC addresses in one secure place.</p>
                    </div>
                </div>
                <!-- Feature 2: Real Estate Management -->
                <div class="col">
                    <div class="card h-100 border-success bg-success bg-opacity-10 shadow-sm rounded-4 p-4 feature-card">
                        <div class="display-4 mb-3 text-success">&#127968;</div>
                        <h4 class="h5 fw-semibold mb-2 text-success">Real Estate Hub</h4>
                        <p class="card-text text-secondary">Manage multiple properties and assign devices to their respective locations effortlessly.</p>
                    </div>
                </div>
                <!-- Feature 3: QR Code Integration -->
                <div class="col">
                    <div class="card h-100 border-purple bg-purple bg-opacity-10 shadow-sm rounded-4 p-4 feature-card" style="--bs-purple-rgb: 107, 70, 193;">
                        <div class="display-4 mb-3 text-purple" style="color: #6b46c1;">&#128290;</div>
                        <h4 class="h5 fw-semibold mb-2 text-purple" style="color: #6b46c1;">Smart QR Codes</h4>
                        <p class="card-text text-secondary">Generate QR codes for devices, scan to view/edit details, or instantly open manuals.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Call to Action Section -->
    @* <section class="py-5 bg-primary text-white text-center">
        <div class="container col-lg-8 mx-auto px-4">
            <h3 class="h2 fw-bold mb-4">Ready to Get Organized?</h3>
            <p class="lead mb-4 text-white-75">
                Join countless others who are simplifying their lives with My Home. It's intuitive, secure, and designed for you.
            </p>
            <button class="btn btn-light btn-lg rounded-pill fw-bold shadow-lg btn-hover-scale btn-white-ring px-5 py-3">
                Create Your Account
            </button>
        </div>
    </section> *@

    <!-- About Section -->
    <section id="about" class="py-5 bg-light">
        <div class="container col-lg-8 mx-auto px-4 text-center">
            <h3 class="h2 fw-bold text-dark mb-4">About My Home</h3>
            <p class="lead text-secondary">
                It is very easy to loose a reciept or an insurance proof for long term waranties. We are here to help you! My Home helps you monitor devices warranties and essential information for everything in your household, from gadgets to long-warranty items like furniture. My Home can create qr codes from provided data and easily print them to mark devices. User can scan them to access manuals or receipts, and even prepare email messages for repairs or quality issues directly in mobile phone. And much more...!"
            </p>
        </div>
    </section>

    <!-- Footer Section -->
    <footer class="bg-dark text-white-50 text-center py-4 rounded-top shadow-sm">
        <p class="small mb-1">&copy; {new Date().getFullYear()} My Home App. All rights reserved.</p>
        <p class="small">Designed with &#10084;&#65039; for easy home management.</p>
    </footer>

    <!-- Bootstrap JS CDN (Bundle includes Popper) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" xintegrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
