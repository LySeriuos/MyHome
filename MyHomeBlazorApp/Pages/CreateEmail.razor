    public string GetFileName(string fileLink)
    {
        string fileName = "";
        if (!String.IsNullOrEmpty(fileLink))
        {
            int getIndex = fileLink.LastIndexOf('\\');
            string splitedString = fileLink.Remove(0, getIndex + 1);
            fileName = splitedString;
        }
        return fileName;
    }

