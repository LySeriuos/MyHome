<Modal @ref="refModalDeleteSuccess" Title="Deletion Confirmation">
    <BodyTemplate>
        @ObjectName was deleted successfully!
    </BodyTemplate>
    <FooterTemplate>
        <ButtonCloseCancel TextButton="Close" ButtonEvent="OnHideModalClick"/>
    </FooterTemplate>
</Modal>

@code {
    [Parameter]
    public String? ObjectName { get; set; }
    private Modal? refModalDeleteSuccess { get; set; }

    private async Task OnHideModalClick()
    {
        await refModalDeleteSuccess.HideAsync();
    }

    public async Task OnShowModalClick()
    {
        await refModalDeleteSuccess.ShowAsync();
    }





}
