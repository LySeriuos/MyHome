@using MyHome.Models;
@using MyHome;
@using MyHomeBlazorApp.Pages
@using MyHomeBlazorApp.Shared
@inject BlazorData.DataService DataService
@inject IJSRuntime JSRuntime


<Modal @ref="refModalEditAddDevice" Title="Edit Device Details">
    <BodyTemplate>
        <EditFormDeviceDetails CurrentDevice="CurrentDevice" CurrentUser="CurrentUser" refModalEditAddDevice="refModalEditAddDevice"></EditFormDeviceDetails>
    </BodyTemplate>
</Modal>

@code {

    [Parameter]
    public DeviceProfile? CurrentDevice { get; set; }
    [Parameter]
    public UserProfile? CurrentUser { get; set; }
    [Parameter]
    public int RealEsatateIdToAddDevice { get; set; }
    public Modal? refModalEditAddDevice { get; set; }

}
